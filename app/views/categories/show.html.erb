<p id="notice"><%= notice %></p>

<h1><%= @category.name %></h1>

<table>
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to "#{article.title}", article %></td>
        <td><%= strip_tags(article.content[0, 40]) %></td>
        <td><%= link_to '编辑', edit_article_path(article) %></td>
        <td><%= link_to '删除', article, method: :delete, data: { confirm: "确定要删除文章：#{article.title} 吗？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
